#!/bin/sh
set -e
ln -sf @CPACK_PACKAGING_INSTALL_PREFIX@/@TARGET_INSTALL_DESTINATION@/@PROJECT_NAME_LOWERCASE@.sh /usr/bin/@PROJECT_NAME_LOWERCASE@
chmod +x /usr/bin/@PROJECT_NAME_LOWERCASE@
cp @CPACK_PACKAGING_INSTALL_PREFIX@/share/applications/@PROJECT_NAME_LOWERCASE@.desktop /usr/share/applications/@PROJECT_NAME_LOWERCASE@.desktop
cp @CPACK_PACKAGING_INSTALL_PREFIX@/share/icons/@PROJECT_NAME_LOWERCASE@.png /usr/share/icons/@PROJECT_NAME_LOWERCASE@.png
